<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height_medium"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/drawer_selection_marker_width_medium"
        android:layout_height="match_parent"
        android:background="@drawable/active_item_background" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/drawer_item_image_medium"
        android:layout_height="@dimen/drawer_item_image_medium"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/drawer_item_margin"/>

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/medium_text_size"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/drawer_item_margin"
        android:textColor="@drawable/pressed_item_background" />
</LinearLayout>