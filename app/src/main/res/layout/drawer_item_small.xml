<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height_small"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/drawer_selection_marker_width_small"
        android:layout_height="match_parent"
        android:background="@drawable/active_item_background" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/drawer_item_image_small"
        android:layout_height="@dimen/drawer_item_image_small"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/drawer_item_margin"/>

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/small_text_size"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/drawer_item_margin"
        android:textColor="@drawable/pressed_item_background" />
</LinearLayout>