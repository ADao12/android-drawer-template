<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height_medium"
    android:layout_marginLeft="16dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/drawer_item_image_medium"
        android:layout_height="@dimen/drawer_item_image_medium"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="32dp" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/medium_text_size"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/drawer_item_margin"
        android:textColor="@drawable/pressed_item_background" />
</LinearLayout>